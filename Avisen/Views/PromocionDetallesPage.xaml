<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Avisen"
             x:Class="Avisen.Views.PromocionDetallesPage"
             Title="Detalles de la Promoción"
             BackgroundColor="#F5EBDC">
    <!-- Color de fondo beige claro -->

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Nombre del negocio -->
            <Label x:Name="NombreNegocioLabel"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="#19535F" 
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Margin="0,10,0,20" />

            <!-- Imagen de la promoción con bordes redondeados y sombra -->
            <Border Stroke="#19535F"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 15"
                    BackgroundColor="White"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Padding="0">
                <Image x:Name="PromocionImagen"
                       HeightRequest="200"
                       Aspect="AspectFill"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Border>

            <!-- Contenedor para los detalles de la oferta -->
            <Border Stroke="#19535F"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 15"
                    BackgroundColor="White"
                    HorizontalOptions="Fill"
                    VerticalOptions="Center"
                    Padding="20">
                <VerticalStackLayout Spacing="10">
                    <!-- Título de la sección -->
                    <Label Text="Detalles de la Oferta"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#19535F" 
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />

                    <!-- Descripción de la promoción -->
                    <Label x:Name="PromocionesLabel"
                           FontSize="18"
                           TextColor="#602020" 
                           LineBreakMode="WordWrap"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                </VerticalStackLayout>
            </Border>

            <!-- Botón estilizado con icono -->
            <Button Text="Cerrar"
                    Clicked="CerrarModal"
                    BackgroundColor="#19535F" 
                    TextColor="White"
                    CornerRadius="25"
                    FontAttributes="Bold"
                    FontSize="18"
                    Padding="20,10"
                    HorizontalOptions="Center"
                    WidthRequest="200">
                <Button.ImageSource>
                    <FontImageSource
                        Glyph="{x:Static local:IconFont.Close}"
                        Color="White"
                        FontFamily="MaterialIcon"
                        Size="24" />
                </Button.ImageSource>
            </Button>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>