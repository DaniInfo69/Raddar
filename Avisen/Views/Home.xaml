<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Avisen.Views.Home"
             Title="Home"
             BackgroundColor="Black">

    <ScrollView>
        <StackLayout Padding="10">
            <Label Text="Ofertas Vistas" FontSize="24" TextColor="White" HorizontalOptions="Center"/>
            <CollectionView ItemsSource="{Binding OfertasReales}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#1E1F21" Padding="10" CornerRadius="10">
                            <StackLayout Orientation="Vertical" Spacing="5">
                                <Label Text="{Binding Nombre}" FontSize="20" TextColor="White" FontAttributes="Bold"/>
                                <Label Text="{Binding Descripcion}" FontSize="16" TextColor="LightGreen"/>
                                <Button Text="Ver Oferta" BackgroundColor="LightSeaGreen" TextColor="White"
                                        CommandParameter="{Binding .}"
                                        Clicked="OnVerOfertaClicked"/>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>

</ContentPage>
