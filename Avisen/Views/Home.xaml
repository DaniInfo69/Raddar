<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Avisen.Views.Home"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Home"
    Shell.NavBarIsVisible="False">


    <ScrollView>
        <Grid RowDefinitions=".1*, .8*">
            <Grid BackgroundColor="#0aa59b" />

            <!--  Contenido principal  -->
            <Grid Grid.Row="1">
                <RoundRectangle
                    Margin="-5,-30,-5,-2"
                    CornerRadius="30,30,0,0"
                    Fill="#f0ebdc" />
                <StackLayout Padding="20">
                    <!--  Título  -->
                    <Label
                        Padding="10"
                        FontAttributes="Bold"
                        FontSize="24"
                        HorizontalOptions="Center"
                        Text="Ofertas Vistas"
                        TextColor="#19535F" />

                    <!--  Lista de ofertas  -->
                    <CollectionView ItemsSource="{Binding OfertasReales}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="0,0,0,15"
                                    Padding="10"
                                    BackgroundColor="White"
                                    Stroke="#19535F"
                                    StrokeThickness="1">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10" />
                                    </Border.StrokeShape>

                                    <!--  Margen inferior para separar ofertas  -->
                                    <VerticalStackLayout Spacing="10">
                                        <!--  Nombre del negocio  -->
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="20"
                                            Text="{Binding Nombre}"
                                            TextColor="#19535F" />

                                        <!--  Descripción de la promoción  -->
                                        <Label
                                            FontSize="18"
                                            Text="{Binding promocion.Descripcion}"
                                            TextColor="#602020" />

                                        <!--  Botón de ver oferta  -->
                                        <Button
                                            BackgroundColor="#19535F"
                                            Clicked="OnVerOfertaClicked"
                                            CommandParameter="{Binding .}"
                                            CornerRadius="25"
                                            FontAttributes="Bold"
                                            FontSize="18"
                                            Text="Ver Oferta"
                                            TextColor="White" />
                                    </VerticalStackLayout>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </Grid>
            <Label
                Grid.Column="1"
                FontSize="Medium"
                HorizontalOptions="Center"
                Text="{Binding UpdateFrequency}"
                TextColor="#2D2D2D"
                VerticalOptions="Center" />
        </Grid>
    </ScrollView>
</ContentPage>
