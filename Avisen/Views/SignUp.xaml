<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Avisen.Views.SignUp"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Avisen"
    Title="SignUp"
    NavigationPage.HasNavigationBar="False"
    Shell.NavBarIsVisible="False">

    <ScrollView>
        <Grid RowDefinitions=".3*, .7*">
            <Image Aspect="AspectFill" Source="fondo3.png" />
            <Grid BackgroundColor="Gainsboro" Opacity=".85" />
            <Grid ColumnDefinitions="*,*">
                <Image
                    Aspect="AspectFit"
                    HeightRequest="150"
                    Source="logo.png" />
            </Grid>

            <!--  Contenido principal  -->
            <Grid Grid.Row="1">
                <RoundRectangle
                    Margin="-5,-30,-5,-2"
                    CornerRadius="30,30,0,0"
                    Fill="#f0ebdc" />
                <VerticalStackLayout>
                    <Label
                        FontSize="22"
                        HorizontalTextAlignment="Center"
                        Text="Crea tu cuenta!"
                        TextColor="#A3A3A4" />

                    <!--  Campo de  -->
                    <Grid Margin="0,30,0,0" ColumnDefinitions=".2*, .8*">
                        <Border
                            BackgroundColor="#fcf9ed"
                            HeightRequest="60"
                            HorizontalOptions="Center"
                            StrokeShape="RoundRectangle 30,30,30,30"
                            StrokeThickness="0"
                            VerticalOptions="Center"
                            WidthRequest="60">
                            <Label
                                FontSize="32"
                                HorizontalOptions="Center"
                                Style="{StaticResource MaterialIcon}"
                                Text="{x:Static local:IconFont.Person}"
                                TextColor="Black"
                                VerticalOptions="Center" />
                        </Border>
                        <Entry
                            Grid.Column="1"
                            BackgroundColor="#f5f3ed"
                            FontSize="16"
                            HeightRequest="60"
                            Placeholder="Usuario"
                            TextColor="Black"
                            VerticalOptions="Center"
                            WidthRequest="300" />
                    </Grid>

                    <!--  Campo de EMAIL  -->
                    <Grid Margin="0,30,0,0" ColumnDefinitions=".2*, .8*">
                        <Border
                            BackgroundColor="#fcf9ed"
                            HeightRequest="60"
                            HorizontalOptions="Center"
                            StrokeShape="RoundRectangle 30,30,30,30"
                            StrokeThickness="0"
                            VerticalOptions="Center"
                            WidthRequest="60">
                            <Label
                                FontSize="32"
                                HorizontalOptions="Center"
                                Style="{StaticResource MaterialIcon}"
                                Text="{x:Static local:IconFont.Mail}"
                                TextColor="Black"
                                VerticalOptions="Center" />
                        </Border>
                        <Entry
                            Grid.Column="1"
                            BackgroundColor="#f5f3ed"
                            FontSize="16"
                            HeightRequest="60"
                            Placeholder="Correo"
                            TextColor="Black"
                            VerticalOptions="Center"
                            WidthRequest="300" />
                    </Grid>

                    <!--  Campo Contrase単a  -->
                    <Grid Margin="0,30,0,0" ColumnDefinitions=".2*, .8*">
                        <Border
                            BackgroundColor="#fcf9ed"
                            HeightRequest="60"
                            HorizontalOptions="Center"
                            StrokeShape="RoundRectangle 30,30,30,30"
                            StrokeThickness="0"
                            VerticalOptions="Center"
                            WidthRequest="60">
                            <Label
                                FontSize="32"
                                HorizontalOptions="Center"
                                Style="{StaticResource MaterialIcon}"
                                Text="{x:Static local:IconFont.Lock}"
                                TextColor="Black"
                                VerticalOptions="Center" />
                        </Border>
                        <Entry
                            Grid.Column="1"
                            BackgroundColor="#f5f3ed"
                            FontSize="16"
                            HeightRequest="60"
                            IsPassword="true"
                            Placeholder="Contrase単a"
                            TextColor="Black"
                            VerticalOptions="Center"
                            WidthRequest="300" />
                    </Grid>

                    <!--  Campo Contrase単a 2  -->
                    <Grid Margin="0,30,0,0" ColumnDefinitions=".2*, .8*">
                        <Border
                            BackgroundColor="#fcf9ed"
                            HeightRequest="60"
                            HorizontalOptions="Center"
                            StrokeShape="RoundRectangle 30,30,30,30"
                            StrokeThickness="0"
                            VerticalOptions="Center"
                            WidthRequest="60">
                            <Label
                                FontSize="32"
                                HorizontalOptions="Center"
                                Style="{StaticResource MaterialIcon}"
                                Text="{x:Static local:IconFont.Lock}"
                                TextColor="Black"
                                VerticalOptions="Center" />
                        </Border>
                        <Entry
                            Grid.Column="1"
                            BackgroundColor="#f5f3ed"
                            FontSize="16"
                            HeightRequest="60"
                            IsPassword="true"
                            Placeholder="Repite la Contrase単a"
                            TextColor="Black"
                            VerticalOptions="Center"
                            WidthRequest="300" />
                    </Grid>

                    <Button
                        x:Name="CreateAccount"
                        Margin="0,20,0,0"
                        BackgroundColor="#0bb8ac"
                        HeightRequest="60"
                        Text="Crear cuenta"
                        TextColor="Black"
                        WidthRequest="350" />
                    <Label
                        Margin="0,20,0,-10"
                        FontSize="40"
                        HorizontalOptions="Center"
                        Style="{StaticResource MaterialIcon}"
                        Text="{x:Static local:IconFont.Arrow_back}"
                        TextColor="#dc5a4b">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Back_Clicked" />
                        </Label.GestureRecognizers>
                    </Label>

                </VerticalStackLayout>
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>
