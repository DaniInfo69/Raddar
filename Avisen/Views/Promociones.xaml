            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition Height="200" />
                <RowDefinition Height="200" />
                <RowDefinition Height="200" />
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>


            <!--Promoci贸n 1-->
                <BoxView Grid.Column="1"
                         Color="Blue" Margin="0,0,0,10" />
            
                <Label Grid.Column="1"
