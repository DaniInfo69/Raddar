<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Avisen.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Avisen.Views"
    Title="Avisen">


    <FlyoutItem>
        <ShellContent
            Title="Login"
            ContentTemplate="{DataTemplate views:Login}"
            Route="Login" />
    </FlyoutItem>


    <FlyoutItem>
        <ShellContent
            Title="SignUp"
            ContentTemplate="{DataTemplate views:SignUp}"
            Route="SignUp" />
    </FlyoutItem>
    
    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:Home}"
            Route="Home" />

        <ShellContent
            Title="Map"
            ContentTemplate="{DataTemplate views:Map}"
            Route="Map" />
        
        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate views:Settings}"
            Route="Settings" />

        <ShellContent
            Title="Perfil"
            ContentTemplate="{DataTemplate views:UserProfile}"
            Route="UserProfile" />

    </TabBar>
    
</Shell>
